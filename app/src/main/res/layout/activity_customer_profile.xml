<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shape"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="8sp"
            android:src="@drawable/leftarrow"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/customer_profile"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="8sp"
            android:src="@drawable/leftarrow"
            android:visibility="invisible"
            app:tint="@color/white" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--    firstpageform-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtCusName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#2032A73E"
                            android:clickable="false"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="@string/customer_name"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textColor="@color/black_50"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/edtCardNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#2032A73E"
                            android:clickable="false"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="@string/card_number"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@color/black_50"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvJoinDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#2032A73E"
                            android:clickable="false"
                            android:drawableLeft="@drawable/cale"
                            android:drawablePadding="10dp"
                            android:editable="false"
                            android:focusable="false"
                            android:padding="10dp"
                            android:text="@string/joining_date"
                            android:textColor="@color/black_50"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/CloseSavings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:padding="12dp"
                            android:visibility="invisible"
                            android:text="@string/close_saving"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/background"
                        android:backgroundTint="#2032A73E"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="top"
                        android:hint="@string/address"
                        android:lines="3"
                        android:padding="10dp"
                        android:textColor="@color/black_50"
                        android:textSize="14sp" />


                </LinearLayout>
                <!--    secondpageform-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtCusName1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#EFF4FE"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:text="@string/customer_name"
                            android:textColor="@color/black_50"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/edtLoanNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#EFF4FE"
                            android:inputType="number"
                            android:padding="10dp"
                            android:text="@string/loan_number"
                            android:textColor="@color/black_50"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvStDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#EFF4FE"
                            android:drawableLeft="@drawable/cale"
                            android:drawablePadding="10dp"
                            android:padding="10dp"
                            android:text="@string/start_date"
                            android:textColor="@color/black_50"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvEnDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#EFF4FE"
                            android:drawableLeft="@drawable/cale"
                            android:drawablePadding="10dp"
                            android:padding="10dp"
                            android:text="@string/end_date"
                            android:textColor="@color/black_50"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtInterest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#EFF4FE"
                            android:inputType="number"
                            android:padding="10dp"
                            android:text="@string/interest"
                            android:textColor="@color/black_50"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/edtIntAmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#EFF4FE"
                            android:inputType="number"
                            android:padding="10dp"
                            android:text="@string/interest_amount"
                            android:textColor="@color/black_50"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/background"
                        android:backgroundTint="#2032A73E"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/saving_amount"
                            android:textColor="#3257A7"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvSavAmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="₹ "
                            android:textColor="#3257A7"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/background"
                        android:backgroundTint="#2032A73E"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/loan_amount"
                            android:textColor="#3257A7"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvLoanAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="₹ "
                            android:textColor="#3257A7"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/layLoan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6dp"
                        android:orientation="vertical"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/loan"
                            android:textColor="@color/green"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/dividerL"
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/green" />

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/tvLoEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/no_loans_found"
                    android:visibility="gone" />

                <!--        savingpagerecycler-->

                <!--        loanpagerecycler-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclarloan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <TextView
            android:id="@+id/tvAddLoans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="@color/green"
            android:drawableRight="@drawable/add"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:text="@string/add_loans"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </FrameLayout>

</LinearLayout>
