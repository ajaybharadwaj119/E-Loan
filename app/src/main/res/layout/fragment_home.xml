<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/Swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:backgroundTint="@color/green">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-2dp"
                        android:backgroundTint="@color/green"
                        android:scaleType="fitXY"
                        android:src="@drawable/homepageframe"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/manage_your_income"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold">

                            </TextView>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvCurrentDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="16 june 2023"
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/tvCurrentDay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:gravity="center"
                                    android:text="Monday"
                                    android:textColor="@color/black" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/tvPrefix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="84dp"
                                android:layout_height="84dp"
                                android:layout_marginHorizontal="10dp"
                                android:src="@drawable/baseline_android_24" />


                        </LinearLayout>


                    </LinearLayout>


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#CAD7F2"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/total_collected"
                                android:textColor="#3257A7"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/tvTotalColl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:text="₹ "
                                android:textColor="#3257A7"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#E5CAF2"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/loan_amount"
                                android:textColor="#3257A7"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/tvLoanAmt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:text="₹"
                                android:textColor="#3257A7"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#CAF2EB"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/total_interest"
                                android:textColor="#3257A7"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/tvInter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:text="₹ "
                                android:textColor="#3257A7"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#F2DDCA"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/expense"
                                android:textColor="#3257A7"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/tvExpense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:text="₹ "
                                android:textColor="#3257A7"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">






                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#CAD7F2"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/customers"
                                android:textColor="#3257A7"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/tvCustomer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:text=""
                                android:textColor="#3257A7"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#EFF2CA"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/cash_in_hand"
                                android:textColor="#3257A7"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/tvOnAgents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:text=" "
                                android:textColor="#3257A7"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <include
                    android:id="@+id/layInclude"
                    layout="@layout/include_home_expand" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layCustom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="30dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/customericon"
                                app:tint="@color/black">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/customers"
                                android:textColor="@color/black"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layLoan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="20dp">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/loan_new">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/loan"
                                android:textColor="@color/black"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layExpense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="30dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/expenseicon"
                                app:tint="@color/black">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/expense"
                                android:textColor="@color/black"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layTransHistory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="30dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/trans_history">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/transaction_history"
                                android:textColor="@color/black"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layPayHist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#CAD7F2"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="30dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/paymenthistory">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Payment History"
                                android:textColor="#3257A7"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <LinearLayout
                            android:id="@+id/laySavings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/background"
                            android:backgroundTint="#CAD7F2"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="20dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/savings">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/saving"
                                android:textColor="#3257A7"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="100dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background"
                        android:backgroundTint="#CAD7F2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="30dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:backgroundTint="@color/green"
                            android:src="@drawable/report_nav"
                            app:tint="@color/green">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/report"
                            android:textColor="#3257A7"
                            android:textSize="12sp">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPdf"
                    style="@style/poppins_medium_500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="30dp"
                    android:background="@drawable/edit_shape"
                    android:backgroundTint="@color/green"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/download_pdf"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>